                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editSliderForm">
                    <div class="mb-3" hidden>
                        <label for="editId" class="form-label fw-semibold">Id</label>
                        <input type="text" id="editId" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="editTitulo" class="form-label fw-semibold">Titulo</label>
                        <input type="text" id="editTitulo" class="form-control" placeholder="¿Que es?" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescription" class="form-label">Descripción</label>
                        <textarea class="form-control" id="editDescription" rows="3" placeholder="Descripción"
                            required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editUrlPortada" class="form-label fw-semibold">URL de la portada del video</label>
                        <input type="text" id="editUrlPortada" class="form-control"
