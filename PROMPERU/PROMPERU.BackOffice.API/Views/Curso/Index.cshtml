                        <label for="inputTipoEvento" class="form-label fw-semibold">Tipo Evento</label>
                        <select name="ubicacion" id="inputTipoEvento" class="form-select">
                            <option selected>Seleccionar Evento</option>
                            <option value="1">Perú</option>
                            <option value="2">Cuzco</option>
                            <option value="3">Lima</option>
                        </select>
                        
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Tipo Modalidad</label>
                        <div id="modalidadContainer"></div>
                    </div>
                 
                    <div class="mb-3">
                        <label for="createEstado" class="form-label fw-semibold">Estado</label>
                        <select class="form-select" id="createEstado">
                            <option selected>Estado</option>
                            <option value="1">Habilitado</option>
                            <option value="0">Deshabilitado</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="createUrlImagen" class="form-label fw-semibold">URL de la Imagen*</label>
                        <input type="text" id="createUrlImagen" maxlength="250" class="form-control" placeholder="URL de la imagen">
                    </div>
                    <div class="mb-3">
                        <label for="createNombreBoton" class="form-label fw-semibold">Nombre del botón**</label>
                        <input type="text" id="createNombreBoton" maxlength="50" class="form-control custom-button"
                            placeholder="Escriba el Nombre del botón">
                    </div>

                    <div class="mb-3">
                        <label for="createUrlIconBoton" class="form-label fw-semibold">URL Icono de Boton*</label>
                        <input type="text" id="createUrlIconBoton" maxlength="250" class="form-control"
                            placeholder="URL icono de boton">
                    </div>


                    <div class="mb-3">
                        <label for="createBrochureUrl" class="form-label fw-semibold">URL del Brochure*</label>
                        <input type="text" id="createBrochureUrl" maxlength="250" class="form-control" placeholder="URL del brochure">
                    </div>                  

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close-modal
            btn-close-modal" data-bs-dismiss="modal">
                    Cerrar
                </button>
                <button type="button" class="btn btn-save" id="saveCreateSlider">Crear</button>
            </div>
