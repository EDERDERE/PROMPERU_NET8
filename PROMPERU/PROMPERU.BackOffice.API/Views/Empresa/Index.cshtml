<!-- Modal para Crear  -->
<div class="modal fade" id="createSliderModal" tabindex="-1" aria-labelledby="createSliderModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createSliderModalLabel">Crear empresa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createSliderForm">
                    <div class="mb-3">
                        <label for="createNombreEmpresa" class="form-label fw-semibold">Nombre </label>
                        <input type="text" id="createNombreEmpresa" class="form-control" placeholder="" required>
                    </div>
                    <div class="mb-3">
                        <label for="createDescripccionEmpresa" class="form-label fw-semibold">Descripción</label>
                        <textarea id="createDescripccionEmpresa" class="form-control" rows="3" placeholder=""
                            required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="createCorreoEmpresa" class="form-label fw-semibold">Correo</label>
                        <input type="text" id="createCorreoEmpresa" class="form-control" placeholder="" required>
                    </div>

                    <div class="mb-3">
                        <label for="createLogoEmpresa" class="form-label fw-semibold">Logo de empresa</label>
                        <input type="text" id="createLogoEmpresa" class="form-control" placeholder="" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close-modal
            btn-close-modal" data-bs-dismiss="modal">
                    Cerrar
                </button>
                <button type="button" class="btn btn-save" id="saveCreateSlider">Crear</button>
            </div>
        </div>
    </div>
</div>




<!-- Modal para Editar Slider -->
