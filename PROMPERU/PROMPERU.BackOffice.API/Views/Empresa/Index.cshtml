                    </div>
                    <div class="mb-3" hidden>
                        <label for="editOrdenEmpresa" class="form-label fw-semibold">Id</label>
                        <input type="text" id="editOrdenEmpresa" class="form-control" placeholder="Paso">
                    </div>
                    <div class="mb-3">
                        <label for="editNombreEmpresa" class="form-label fw-semibold">Nombre* </label>
                        <input type="text" id="editNombreEmpresa" class="form-control" placeholder="" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescripccionEmpresa" class="form-label fw-semibold">Descripción*</label>
                        <textarea id="editDescripccionEmpresa" class="form-control" rows="3" placeholder=""
                            required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="editCorreoEmpresa" class="form-label fw-semibold">Correo*</label>
                        <input type="text" id="editCorreoEmpresa" class="form-control" placeholder="" required>
                    </div>

                    <div class="mb-3">
                        <label for="editLogoEmpresa" class="form-label fw-semibold">Logo de empresa*</label>
                        <input type="text" id="editLogoEmpresa" class="form-control" placeholder="" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close-modal
