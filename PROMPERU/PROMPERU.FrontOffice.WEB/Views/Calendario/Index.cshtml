<main>
  <div class="hero">
    <div class="container" id="bannerCalendario"></div>
  </div>


  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-12 col-md-12">
        <h2 class="text-start title-que-es">Calendario</h2>
        <div class="red-linear"></div>
      </div>
      <div class="col-12 col-md-12 mt-5">
        <div class="col-12 mx-auto">
          <div class="my-5">
            <div class="calendario_container">
              <div class="calendario_filtros d-flex gap-2 w-100 align-items-end mb-5 flex-column flex-md-row">
                <div class="w-100">
                  <label class="form-label text-primary">Año:</label>
                  <select class="form-select" aria-label="Selecionar año" id="year">
                  </select>
                </div>
                <div class="w-100">
                  <label class="form-label text-primary">Mes:</label>
                  <select class="form-select" aria-label="Selecionar mes" id="month">
                  </select>
                </div>
                <div class="w-100">
                  <label class="form-label text-primary">Tipo de Eventos:</label>
                  <select class="form-select" aria-label="Selecionar tipo de evento" id="inputTipoEvento">
                  </select>
                </div>
                <div class="d-flex align-items-center justify-content-center w-100">
                                    <div id="option-grid" class="ms-4 cursor-pointer view_switch active">
